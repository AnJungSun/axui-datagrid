{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "jsx": "react",
    "noLib": false,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": "./",
    "paths": {
      "datagrid-ts/*": ["src/*"],
      "@root/*": ["./*"]
    },
    "typeRoots" : [
      "./node_modules/@types",
      "./dev/typings",
      "./src/typings"
    ]
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules", "dist"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true
  }
}
